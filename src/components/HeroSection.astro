---

---
	<section id="hero" class="relative h-screen snap-start">
	  <!-- Enable scroll snapping on the main container -->
	<div class="snap-y snap-mandatory h-screen overflow-y-auto overflow-x-hidden">
      <!-- Video Background -->
      <div class="absolute inset-0 w-full h-full">
        <video 
          class="w-full h-full object-cover"
          autoplay
          loop
          muted
          playsinline
          poster="/images/hero-stock-image.webp"
          preload="metadata"
        >
          <source src="/videos/hero-timeloop.mp4" type="video/mp4">
          Your browser does not support the video tag.
        </video>
        <!-- Dark overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      </div>

      <!-- Content Overlay -->
      <div class="relative z-10 h-full flex items-center">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-display text-3xl sm:text-5xl lg:text-7xl font-bold text-white leading-tight mb-4 lg:mb-6">
          Crafting the Perfect
          <span class="text-ceruleanBlue-300">Workspace</span>
          Experience
        </h1>
        <p class="text-sm sm:text-lg lg:text-xl text-white mb-6 lg:mb-8 leading-relaxed max-w-3xl mx-auto px-4">
          Transform your workspace with our thoughtfully curated collection of semi premium essentials. Where style meets functionality.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center px-4 sm:px-0">
          <a href="/about" class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 border-2 border-white text-base font-medium rounded-none text-white hover:bg-white hover:text-warm-gray-900 transition-all">
            Discover Our Story
          </a>
          <a href="/shop/all" class="w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 border-2 border-ceruleanBlue-400 text-base font-medium rounded-none bg-ceruleanBlue-400 text-white hover:bg-transparent hover:text-ceruleanBlue-100 hover:border-ceruleanBlue-100 transition-all">
            Explore Our Collection
          </a>
        </div>
      </div>
      <button 
        onclick="document.getElementById('features').scrollIntoView({behavior: 'smooth'})"
        class="absolute bottom-8 left-0 right-0 flex flex-col items-center cursor-pointer group"
        aria-label="Scroll to features section"
      >
        <span class="text-white/90 text-sm sm:text-base font-medium mb-2 group-hover:text-white transition-colors">
          Scroll to Discover More
        </span>
        <svg 
          class="w-5 h-5 sm:w-6 sm:h-6 text-white/90 animate-bounce group-hover:text-white transition-colors" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      </div>
    </div>
  </section>