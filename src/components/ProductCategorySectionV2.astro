---
import products from '../data/products.json';
import categories from '../data/categories.json';

const productsByCategory = products.reduce((acc: Record<string, typeof products[number][]>, product) => {
  if (!acc[product.category]) {
    acc[product.category] = [];
  }
  acc[product.category].push(product);
  return acc;
}, {});

// Helper function to get category icon
function getCategoryIcon(categorySlug: string) {
  switch (categorySlug) {
    case 'backpacks':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />`;
    case 'chairs':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />`;
    case 'accessories':
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`;
    default:
      return `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />`;
  }
}
---

<!-- Enhanced Product Categories -->
<section id="categories" class="py-20 snap-start bg-gradient-to-br from-warm-gray-50 to-sage-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Enhanced Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-sage-100 rounded-full mb-6">
        <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      <h2 class="font-display text-4xl font-bold text-warm-gray-900 mb-4">
        Shop by Category
      </h2>
      <p class="text-lg text-warm-gray-600 max-w-3xl mx-auto leading-relaxed">
        Discover our curated collection of workspace essentials, each designed to elevate your professional environment and enhance your productivity.
      </p>
    </div>

    <!-- Enhanced Category Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-12">
      {categories.map((category, index) => (
        <div class="group cursor-pointer transform hover:scale-105 transition-all duration-300">
          <a href={`/shop/${category.slug}`} class="block">
            <!-- Enhanced Card Design -->
            <div class="bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-warm-gray-100 h-full flex flex-col">
              <!-- Image Section -->
              
              <div class="relative aspect-[4/3] overflow-hidden">
              <img 
                    src={category.image || '/images/category-placeholder.jpg'} 
                    alt={category.name} 
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"/>
                <!-- Category Icon -->
                <div class="absolute top-6 right-6 w-12 h-12 bg-white/90 backdrop-blur-sm rounded-xl flex items-center justify-center shadow-lg">
                  <svg class="w-6 h-6 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <Fragment set:html={getCategoryIcon(category.slug)} />
                  </svg>
                </div>
                
                <!-- Product Count Badge -->
                <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm rounded-full px-3 py-1 shadow-lg">
                  <span class="text-xs md:text-sm font-medium text-warm-gray-700">
                    {productsByCategory[category.slug]?.length || 0} Products
                  </span>
                </div>
                
                <!-- Category Name Overlay -->
                <div class="absolute bottom-4 right-4 left-4">
                  <h3 class="font-display text-xl md:text-2xl font-bold text-white leading-tight text-shadow-lg">
                    {category.name}
                  </h3>
                </div>
              </div>
              
              <!-- Content Section -->
              <div class="px-4 py-4 md:px-6 md:py-6 space-y-3 md:space-y-4 flex-1 flex flex-col">
                <p class="text-warm-gray-600 leading-relaxed text-xs md:text-sm line-clamp-3">
                  {category.description}
                </p>
                
                <!-- Action Section -->
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between pt-3 md:pt-4 border-t border-warm-gray-100 space-y-2 sm:space-y-0 mt-auto">
                  <div class="flex items-center space-x-2">
                    <span class="text-xs text-warm-gray-500">Starting from</span>
                    <span class="text-base md:text-lg font-bold text-sage-600">
                      ${Math.floor(Math.random() * 50) + 29}
                    </span>
                  </div>
                  <div class="flex items-center text-sage-600 font-medium group-hover:text-sage-700 transition-colors text-sm md:text-base">
                    <span>Explore</span>
                    <svg class="ml-2 w-3 h-3 md:w-4 md:h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Enhanced hover effects */
  .group:hover .group-hover\:scale-105 {
    transform: scale(1.05);
  }
  
  /* Smooth transitions */
  .transition-all {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Enhanced shadows */
  .shadow-lg {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .hover\:shadow-2xl:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
  
  /* Backdrop blur for modern glass effect */
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
  
  /* Text overflow handling */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Ensure text doesn't overflow on small screens */
  @media (max-width: 640px) {
    .font-display {
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
  }
  
  /* Prevent text from overlapping with badges */
  .absolute {
    max-width: calc(100% - 2rem);
  }
  
  /* Enhanced text shadow for category names */
  .text-shadow-lg {
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.6), 0 2px 4px rgba(0, 0, 0, 0.4);
  }
  
  /* Remove unnecessary left margin/padding */
  .absolute.bottom-4.right-4.left-4 {
    left: 0;
    right: 0;
    margin: 0 1rem 1rem 1rem;
  }
</style> 